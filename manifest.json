{

  "manifest_version": 2,
  "name": "Pitchify",
  "version": "1.0",

"background": {
  "scripts": ["background.js"]
},

  "browser_action":{
  	"browser_style": true,
  	"default_icon": "icons/wave.png",
  	"default_title": "Pitchify",
  	"default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["page.js"]
    }
  ],
 
 	 "permissions": [
    "tabs",
    "*://*/*"
  ]
}